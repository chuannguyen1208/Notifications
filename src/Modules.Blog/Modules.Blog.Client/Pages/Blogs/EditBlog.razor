@page "/blogs/{Id:int}"
@using Modules.Blog.Shared
@rendermode InteractiveServer
@inject BlogsService BlogsService
@inject NavigationManager Navigation

<PageTitle>@(Id.HasValue ? "Edit" : "New blog")</PageTitle>

<div class="px-3 background-image">
    <div class="row d-flex align-items-center py-3">
        <div class="col-md-6">
            <button class="btn btn-primary" @onclick="Publish">Publish</button>
            <button class="btn btn-secondary" @onclick="Save">Save</button>
        </div>
    </div>
    <div class="row py-2">
        <div class="col-md-12">
            <div class="form-group">
                <InputText id="Title" class="form-control cs-input" placeholder="Post title" style="font-size: 1.2rem" @bind-Value="Blog.Title" />
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="form-group">
            <MyComps.RichEditor OnTextChanged="@(val => Blog.Description = val)"></MyComps.RichEditor>
        </div>
    </div>
</div>


@code {
    [Parameter] public int? Id { get; set; }

    EditBlogDto Blog = new()
    {
        Title = ""
    };

    protected override void OnParametersSet()
    {
        Blog.Id = Id ?? 0;
    }

    async Task Save()
    {
        await BlogsService.EditBlogAsync(Blog);
        Navigation.NavigateTo("/blogs");
    }

    async Task Publish()
    {
        Blog.Published = true;
        await Save();
    }
}
