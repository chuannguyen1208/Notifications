@page "/{Id:int}"
@rendermode InteractiveServer
@inject CommonInterop _commonJs
@inject BlogsService _blogsService

<PageTitle>@(_blog?.Title)</PageTitle>
<div class="bg-img" style="height: 250px"></div>
<div class="d-flex justify-content-center position-relative">
    @if (loading)
    {
        <span>Loading...</span>
    }
    else
    {
        <div class="p-5 rounded-3 border detail-content">
            <h2>@_blog.Title</h2>
            <div class="d-flex mt-3 opacity-75">
                <div>
                    <div class="fs-12">Author</div>
                    <div class="fs-14">Chuan.Nguyen</div>
                </div>
                <div class="ms-5">
                    <div class="fs-12">Pulished</div>
                    <div class="fs-14">@_blog.Created.ToString("Y")</div>
                </div>
                <div></div>
            </div>
            <div class="mt-3">@_blog.Description</div>
            <div class="mt-5 editor-preview" @ref="_contentElement"></div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool loading = true;
    private bool loadingContent = true;
    private BlogDto _blog = null!;
    private ElementReference _contentElement = default!;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _blog = await _blogsService.GetBlogAsync(Id);
        }
        finally
        {
            loading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_blog is not null && loadingContent)
        {
            await _commonJs.SetInnerHtml(_contentElement, _blog.Content);
            loadingContent = false;
        }
    }
}
