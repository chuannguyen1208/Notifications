{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "RabbitMQSettings": {
    "Host": "localhost",
    "Username": "rabbitmq",
    "Password": "rabbitmq"
  },
  "ConnectionStrings": {
    "Default": "Server=localhost,1433;Database=Notifications;User Id=sa;Password=Pass@word;TrustServerCertificate=true;"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "blog": {
        "ClusterId": "blog",
        "Match": {
          "Path": "/blog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/blog" }
        ]
      }
    },
    "Clusters": {
      "blog": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5172"
          }
        }
      }
    }
  }
}
